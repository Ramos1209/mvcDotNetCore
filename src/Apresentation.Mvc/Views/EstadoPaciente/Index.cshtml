@model IEnumerable<ErpHospitalar.Domain.Entities.EstadoPaciente>

@{
    ViewData["Title"] = "Index";
}

<vc:cabecalho titulo="Medical Manager SYS " subtitulo="Estado Paciente"></vc:cabecalho>
<partial name="PartialViews/_estado_paciente" />

<div class="panel panel-default panel-controls">
    <div class="panel panel-heading">
        <h3>Estados de Pacientes</h3>
    </div>
    <div class="panel panel-body">
        <p>
            <a asp-action="Create" class="btn btn-info"><span class="fa fa-plus-circle"></span>&nbsp;&nbsp;Adicionar Estado</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            <a title="Editar Paciente" asp-action="Edit" asp-route-id="@item.Id" class="fa fa-pencil-square fa-2x"></a> |
                            <a title="Informaçoes do Paciente" asp-action="Details" asp-route-id="@item.Id" class="fa fa-search fa-2x"></a> |
                            <a title="Deletar Paciente" asp-action="Delete" asp-route-id="@item.Id" class="fa fa-trash-o fa-2x"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>