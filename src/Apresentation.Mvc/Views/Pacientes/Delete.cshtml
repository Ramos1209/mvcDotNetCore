@model ErpHospitalar.Domain.Entities.Paciente

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="panel panel-heading">
        <h3>Tem certeza de que deseja excluir este paciente</h3>
    </div>
    <div class="panel panel-body">
        <div>
            <partial name="_details_delete" />

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Excluir Paciente" class="btn btn-danger" /> |
                <a asp-controller="Paciente" asp-action="Index" class="btn btn-default">Back to List</a>
            </form>
        </div>
    </div>
</div>




